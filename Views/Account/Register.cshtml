@model WorkBot.Models.RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = null;
}

<!doctype html>
<html>
<head>
    <meta charset="utf-8" />
    <title>WorkBot - Register</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Same CSS styling as register template, adapted for Razor syntax -->
    <!-- ... CSS content similar to login but with register-specific styles ... -->
</head>
<body>
    <!-- Same particle background -->
    
    <div class="register-container">
        <div class="logo">
            <h1>ðŸ§  WorkBot</h1>
            <p>Create your account</p>
        </div>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="flash-messages">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <div class="flash-message error">@error.ErrorMessage</div>
                }
            </div>
        }

        <form method="POST" asp-action="Register">
            <div class="form-group">
                <label asp-for="Username">Username</label>
                <input asp-for="Username" type="text" required>
            </div>

            <div class="form-group">
                <label asp-for="Email">Email Address</label>
                <input asp-for="Email" type="email" required>
            </div>

            <div class="form-group">
                <label asp-for="Password">Password</label>
                <input asp-for="Password" type="password" required>
                <div class="password-requirements">Minimum 6 characters</div>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword">Confirm Password</label>
                <input asp-for="ConfirmPassword" type="password" required>
            </div>

            <button type="submit" class="submit-btn">Create Account</button>
        </form>

        <div class="form-links">
            Already have an account? <a asp-action="Login">Sign in here</a>
        </div>
    </div>
</body>
</html>